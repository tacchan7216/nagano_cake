<div class="container">
  <div class="row">
    <h1>商品一覧</h1>
    <div class="text-right">
      <i class="fal fa-plus-circle"></i>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-md-10">
      <table class="items">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= paginate @items %>
