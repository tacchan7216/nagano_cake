<div class="container">
  <div class="row">
    <div>
    <h1>商品一覧</h1>
    </div>
    <div class="text-right">
      <%= link_to new_admin_item_path do %>
        <i class="far fa-plus-circle"></i>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto col-md-10">
      <table class="items">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

