<div class="container">
  <h1>商品新規登録</h1>
  <div class="row">
    <div class="mx-auto col-8">
      <table>
        <tbody>
           <%= form_with model: @item, url: '/admin/items', method: :post do |f| %>
            <tr>
              <th>商品画像</th>
              <th><%= f.file_field :image, accept: "image/*" %></th>
            </tr>
            <tr>
              <th>商品名</th>
              <th><%= f.text_field :name %></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= f.text_area :introduction %></th>
            </tr>
            <tr>
              <th>税抜価格</th>
              <th><%= f.text_field :price %></th>
            </tr>
            <tr>
              <th><%= f.submit '新規登録' %></th>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
